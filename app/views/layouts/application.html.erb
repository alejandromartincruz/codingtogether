<!DOCTYPE html>
<html ng-app="eventManager">
	<head>
		<title>CodingTogether</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>

	</head>
	<body ng-controller="eventController as eventShow">
		<div class="container">
			<div class="header">
				<div class="logo">
					<%= link_to image_tag(asset_path('logo.png'), :class => "title-logo"), root_path, 'data-no-turbolink' => true %>
				</div>
				<div class="header-buttons">
					<input name="filter-tag-input" type="text" class="filter-tag-input" ng-model="eventSearch" placeholder="search events"/>
				</div>
				<div class="header-login">
					<%= headerLogin.html_safe %>
				</div>
			</div>
			<div class="content">
				<%= yield %>
			</div>
			<div class="clear"></div>
			<div class="footer">
				<div class="center">
					Webpage developed by <a href="https://github.com/alejandromartincruz">Alejandro Martin</a>
				</div>
			</div>
		</div>
		
	</body>
</html>

