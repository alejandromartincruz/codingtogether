<!DOCTYPE html>
<html ng-app="eventManager">
	<head>
		<title>CodingTogether</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		<script src="actions.js" ></script>
	</head>
	<body ng-controller="eventController as eventShow">
		<div class="container">
			<div class="header">
				<div class="logo">
					<%= link_to image_tag(asset_path('logo.png'), :class => "title-logo"), root_path %>
				</div>
				<div class="header-buttons">
					Here comes some buttons or something
				</div>
				<div class="header-login">
					<%= headerLogin.html_safe %>
				</div>
			</div>
			<div class="content">
				<%= yield %>
			</div>
			<div class="clear"></div>
			<div class="footer">
				<div>
					<center>Webpage developed by Alejandro Martin</center>
				</div>
			</div>
		</div>
		
	</body>
</html>

