<p id="notice"><%= notice %></p>
<div class="content">
  <div class="panel panel-default sign-form">
    <div class="panel-heading">
<h1>Listing Events</h1>
</div>
    <div class="panel-body">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Hour</th>
      <th>Duration</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.hour %></td>
        <td><%= event.duration %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event, :class => "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
    </div>
  </div>
</div>
